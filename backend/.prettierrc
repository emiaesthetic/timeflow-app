{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "proseWrap": "preserve",
  "embeddedLanguageFormatting": "auto",
  "htmlWhitespaceSensitivity": "ignore",
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^@/common/(.*)$",
    "^@/modules/(.*)$",
    "^@/prisma/(.*)$",
    "^../(.*)$",
    "^./(.*)$"
  ],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
